- label_span, total_span = {xs: 3, sm: 3, md: 3, lg: 3}, {xs: 11, sm: 11, md: 11, lg: 8}

= form_for @food_item, html: {class: 'form-horizontal'} do |f|

  .form-group{class: ('has-error' if @food_item.errors[:name].any?) }
    = f.label :name, 'Name', class: "control-label col-xs-#{label_span[:xs]} col-sm-#{label_span[:sm]} col-md-#{label_span[:md]} col-lg-#{label_span[:lg]}"

    %div{class: "input-group col-xs-#{total_span[:xs] - label_span[:xs]} col-sm-#{total_span[:sm] - label_span[:sm]} col-md-#{total_span[:md] - label_span[:md]} col-lg-#{total_span[:lg] - label_span[:lg]}"}
      = f.text_field :name, class: 'form-control'

    %div{class: "col-xs-offset-#{label_span[:xs]} col-sm-offset-#{label_span[:sm]} col-md-offset-#{label_span[:md]} col-lg-offset-#{label_span[:lg]}"}
      - @food_item.errors[:name].each do |text|
        = error_help_block text.humanize

  .form-group{class: ('has-error' if @food_item.errors[:description].any?) }
    = f.label :description, 'Description', class: "control-label col-xs-#{label_span[:xs]} col-sm-#{label_span[:sm]} col-md-#{label_span[:md]} col-lg-#{label_span[:lg]}"

    %div{class: "input-group col-xs-#{total_span[:xs] - label_span[:xs]} col-sm-#{total_span[:sm] - label_span[:sm]} col-md-#{total_span[:md] - label_span[:md]} col-lg-#{total_span[:lg] - label_span[:lg]}"}
      = f.text_area :description, class: 'form-control'

    %div{class: "col-xs-offset-#{label_span[:xs]} col-sm-offset-#{label_span[:sm]} col-md-offset-#{label_span[:md]} col-lg-offset-#{label_span[:lg]}"}
      - @food_item.errors[:description].each do |text|
        = error_help_block text.humanize

  .form-group{class: ('has-error' if @food_item.errors[:price].any?) }
    = f.label :price, 'Price', class: "control-label col-xs-#{label_span[:xs]} col-sm-#{label_span[:sm]} col-md-#{label_span[:md]} col-lg-#{label_span[:lg]}"

    %div{class: "input-group col-xs-#{total_span[:xs] - label_span[:xs]} col-sm-#{total_span[:sm] - label_span[:sm]} col-md-#{total_span[:md] - label_span[:md]} col-lg-#{total_span[:lg] - label_span[:lg]}"}
      %span.input-group-addon $
      = f.text_field :price, class: 'form-control'

    %div{class: "col-xs-offset-#{label_span[:xs]} col-sm-offset-#{label_span[:sm]} col-md-offset-#{label_span[:md]} col-lg-offset-#{label_span[:lg]}"}
      - @food_item.errors[:price].each do |text|
        = error_help_block text.humanize

  .form-group{class: ('has-error' if @food_item.errors[:is_alcoholic].any?) }
    = f.label :is_alcoholic, 'Is Alcoholic?', class: "control-label col-xs-#{label_span[:xs]} col-sm-#{label_span[:sm]} col-md-#{label_span[:md]} col-lg-#{label_span[:lg]}"

    %div{class: "input-group col-xs-#{total_span[:xs] - label_span[:xs]} col-sm-#{total_span[:sm] - label_span[:sm]} col-md-#{total_span[:md] - label_span[:md]} col-lg-#{total_span[:lg] - label_span[:lg]}"}
      .checkbox= f.check_box :is_alcoholic, class: ''

    %div{class: "col-xs-offset-#{label_span[:xs]} col-sm-offset-#{label_span[:sm]} col-md-offset-#{label_span[:md]} col-lg-offset-#{label_span[:lg]}"}
      - @food_item.errors[:is_alcoholic].each do |text|
        = error_help_block text.humanize

  .form-group
    %div{class: "input-group col-xs-offset-#{label_span[:xs]} col-sm-offset-#{label_span[:sm]} col-md-offset-#{label_span[:md]} col-lg-offset-#{label_span[:lg]} col-xs-1 col-sm-1 col-md-1 col-lg-1"}
      = f.submit 'Save', class: 'btn btn-primary'
